generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Startup {
  id          Int               @id @default(autoincrement())
  companyName String
  taxNumber   Int
  createdAt   DateTime          @default(now())
  results     OperatingResult[]

  @@unique([companyName, taxNumber])
}

model OperatingResult {
  id           Int     @id @default(autoincrement())
  year         Int
  balanceSheet String
  value        Int
  startupId    Int
  startup      Startup @relation(fields: [startupId], references: [id])
}
